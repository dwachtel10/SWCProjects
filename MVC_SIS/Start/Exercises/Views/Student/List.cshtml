@model IEnumerable<Exercises.Models.Data.Student>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h4>Student List</h4>
                <p>@Html.ActionLink("Add a Student", "Add", "Student", null, new { @class = "btn btn-primary" })</p>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Major</th>
                            <th>GPA</th>
                            <th>Courses</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var student in Model)
                        {
                            <tr>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@student.Major.MajorName</td>
                                <td>@student.GPA</td>
                                <td>@if (student.Courses != null)
                                    {
                                        for (int i = 0; i < student.Courses.Count;
                                            i++)
                                        {
                                            @student.Courses[i].CourseName;


                                        }
                                    }</td>
                                <td>@Html.ActionLink("Edit", "Edit", "Student", new { StudentID = student.StudentId }, null) |
                                    @Html.ActionLink("Delete", "Delete", "Student", new { StudentID = student.StudentId }, null)
                                </td>
                            </tr>
                            <tr>@if (student.Address != null)
                                {
                                    <td>@student.Address.Street1</td> <td>@student.Address.Street2 </td>
                                    <td>@student.Address.State.StateAbbreviation</td> <td>@student.Address.PostalCode</td>
                                }</tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

