@model Baseball.Models.Team
@{
    ViewBag.Title = "EditTeam";
}

<h2>Edit Team</h2>

@*<div class="row">
    <div class="col-xs-12">
       
        @Html.ActionLink("Return to List", "Teams", "Admin")
    </div>
</div>*@
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("EditTeam", "Admin", null, FormMethod.Post, new { id = "teamForm" }))

        {
            <div class="col-xs-12 col-sm-7">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">Team Details</h4>
                    </div>
                    <div class="panel-body">
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.LeagueId)
                     
                        <div class="form-group">
                            <label>Name:</label>
                            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                        </div>
                        <div class="form-group">
                            <label>Manager:</label>
                            @Html.TextBoxFor(m => m.Manager, new {@class = "form-control"})
                        </div>
                        @*<div class="form-group">
                                <label>League</label>
                                @Html.TextBoxFor(m=>m.LeagueId, new {@class= "form-control"} )
                            </div>*@
                        
                        <button type="submit" class="btn btn-primary">Save</button>
                        @Html.ActionLink("Cancel", "Teams", "Admin", null, new {@class = "btn btn-sm btn-info"})
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/App/jquery-validation-defaults.js"></script>
    <script src="~/Scripts/App/TeamValidation.js"></script>
}