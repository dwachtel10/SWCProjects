@model Baseball.Models.ViewModels.RemoveTeamToNoLeagueVM
@{
    ViewBag.Title = "RemoveTeamToLeagueless";
}

<h2>Remove Team From League</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(t => t.Leagueless.Id)
    <div class="row">
        <div class="col-sm-6">
            <h4>@Model.LeagueToRemoveTeam.Name</h4>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <h4>@Model.Leagueless.Name Teams</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            @Html.ListBox("TeamsToRemove", Model.TeamsOnLeague)
        </div>
        <div class="col-sm-4">
            <button type="button" id="add" class="btn btn-success">Remove Team</button>
        </div>
        <div class="col-sm-4">
            @if (@Model.TeamsOnLeague != null)
            {
                @Html.ListBoxFor(t => t.TeamsToAdd, Model.LeaguelessTeams)
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-lg-offset-4">
            <button id="save" class="btn btn-success txt-center">Save Changes</button>
        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/App/dynamicTeamRemove.js"></script>
}

