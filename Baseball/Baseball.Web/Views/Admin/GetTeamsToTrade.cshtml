@model Baseball.Models.ViewModels.GetTeamsForTradeVM
@{
    ViewBag.Title = "GetTeamsToTrade";
}

<h2>Get Teams To Trade</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-sm-6">
            <label>Team 1:</label>
            @Html.DropDownListFor(t => t.Team1ID, Model.Team1Choice, "-Choose Team 1-", new { @class = "form-control" })
