    </div>
    <div class="rowe"></div>
    <div class="row"></div>
    <div class="row">
        <div class="col-sm-6">
            <label>Team 2:</label>
            @Html.DropDownListFor(t => t.Team2ID, Model.Team2Choice, "-Choose Team 2", new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            @*@Html.ActionLink("Go to Trade", "TradePlayers", "Admin", null, new { @class = "btn-sm btn-primary" })*@
            <button class="btn btn-primary">Trade</button>
