@model List<Baseball.Models.Player>
@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<div class="row">
    <div class="col-xs-12">
        
        @Html.ActionLink("Add Player", "AddPlayer", "Admin", null, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row">
    <div class="col-xs-12">   
        <table class="table table-striped" style="width: auto;">
            <thead>
            <tr>
                <th>Name </th>
                <th>Position</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var player in Model)
            {
                <tr>

                    <td>
                        @player.LastName, @player.FirstName
                    </td>
                    <td class="text-center">@player.Position</td>
                    <td>
                        @Html.ActionLink("Edit", "EditPlayer", "Admin", new {Id = player.Id}, null) |
                        @Html.ActionLink("Delete", "DeletePlayer", "Admin", new {Id = player.Id}, null)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>