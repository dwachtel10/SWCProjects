@model DVDLibrary.Models.DVD
@{
    ViewBag.Title = "DeleteDVD";
}


<div class="row">
    <h2>Delete DVD</h2>
    <div class="col-xs-12 col-sm-7">
        <div class="panel panel-primary">
            @using (Html.BeginForm("DeleteDVD", "Admin", null, FormMethod.Post, new { id = "dvdForm" }))
            {
                <div class="panel-heading">

                    <h4 class="panel-title">Are you sure you want to delete <i>@Model.Title</i>?</h4>
                </div>
                <div class="panel-body">
                    @Html.HiddenFor(m => m.Id)
                    <button type="submit" class="btn btn-primary">Delete <i>@Model.Title</i></button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-sm btn-info" })
                </div>
            }
        </div>
    </div>
</div>
