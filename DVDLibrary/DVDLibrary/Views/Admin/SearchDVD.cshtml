@using DVDLibrary.BLL
@using DVDLibrary.Models
@model IEnumerable<DVD>
@{
    ViewBag.Title = "SearchDVD";
}

@if (Model != null)
{
    <div class="container" align="center">
        <h4>Movies found with search:</h4>
        <br/>
        <div class="col-sm-10">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th style="width: 160px">Poster</th>
                    <th>Title</th>
                    <th>Release Date</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td><img src="@movie.Poster" style="width: 150px; height: 225px"></td>
                        <td>@movie.Title</td>
                        <td>@movie.Released.ToShortDateString()</td>
                    </tr>
                }
                </tbody>
            </table>

