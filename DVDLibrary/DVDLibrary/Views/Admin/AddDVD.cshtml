@model DVDLibrary.Models.DVD

@{
    ViewBag.Title = "AddDVD";
}

<h1 class="Title">Add DVD</h1>

@*Search bar*@
<section>   
    <div class="row" id="SearchBox">
        <form id="dvd-search">
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.Label("Search for DVD?")
                </div>
                <div class="col-xs-12">
                    @Html.TextBox("Search", null, new { id = "SearchForDvd", @class = "text-field" })
                </div>
                <div class="col-xs-12">
                    <input type="submit" class="btn btn-default">
                </div>
            </div>
        </form>           
        </div>
</section>

@*Error Text*@
<section>
    <div class="row">
        <div class="form-group hidden" id="ErrorText">
            Movie not found
        </div>
    </div>
</section>

@*Form*@
<section>
    @using (Html.BeginForm("AddDVD", "Admin", null, FormMethod.Post, new { id = "dvdform", @class="hidden"}))
    {
        Html.RenderPartial("_DVDForm", Model);
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
        <button type="submit" class="btn btn-secondary">Save</button>
    }
</section>


@section scripts
{
    <script src="~/Scripts/App/omdbLoader.js"></script>
}